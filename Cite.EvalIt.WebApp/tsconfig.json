{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "es2020",
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@app/*": [
				"./app/*"
			],
			"@idp-service/*": [
				"./idp-service/*"
			],
			"@user-service/*": [
				"./user-service/*"
			],
			"@notification-service/*": [
				"./notification-service/*"
			],
			"@common/*": [
				"./common/*"
			]
		}
	}
}
